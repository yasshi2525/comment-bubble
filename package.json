{
    "name": "@yasshi2525/comment-bubble",
    "version": "0.1.0",
    "private": "true",
    "license": "MIT",
    "author": "yasshi2525",
    "type": "module",
    "scripts": {
        "postinstall": "npm run build && npm run update",
        "build": "rimraf ./script && tsc && akashic scan asset script",
        "build:watch": "tsc -w",
        "update": "akashic scan asset && akashic scan globalScripts",
        "lint": "eslint . --fix",
        "lint:check": "eslint .",
        "start": "akashic serve -s nicolive",
        "start:silent": "akashic serve -s nicolive --no-open-browser",
        "export-zip": "rimraf game.zip && akashic export zip -o game.zip --nicolive",
        "test": "jest"
    },
    "devDependencies": {
        "@akashic/akashic-cli": "^3.0.16",
        "@akashic/akashic-engine": "^3.21.1",
        "@akashic/headless-akashic": "^4.7.0",
        "@stylistic/eslint-plugin": "^5.4.0",
        "@types/jest": "^30.0.0",
        "@typescript-eslint/parser": "^8.46.1",
        "@yasshi2525/jest-environment-akashic": "^0.1.5",
        "eslint": "^9.37.0",
        "globals": "^16.4.0",
        "jest": "^30.2.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@akashic-extension/akashic-box2d": "^3.1.3",
        "@yasshi2525/akashic-box2d-serializer": "^0.2.1",
        "grapheme-splitter": "^1.0.4"
    }
}
